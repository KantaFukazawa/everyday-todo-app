.login
  .login_upper
    = image_tag 'stepup-logo-middle.png', class: 'login_site_logo'
    %p step up にログイン
  .login_middle
    = button_to user_twitter_omniauth_authorize_path, method: :post, data: {"turbolinks"=>false}, class: 'login_btn login_btn_twitter' do
      = image_tag 'icons-twitter.png'
      Twitterで登録
    = button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: {"turbolinks"=>false}, class: 'login_btn login_btn_google' do
      = image_tag 'icons-google.png'
      Googleで登録
  .login_bottom
    %p
      アカウントをお持ちでない方は
      %span= link_to  'こちら', new_user_registration_path
